{
    "name": "btarget-example-project",
    "dockerComposeFile": "../run/devcontainer/docker-compose.yaml",
    "service": "workspace",
    "workspaceFolder": "/workspace",
    "initializeCommand": "docker run --rm -v .:/workspace alpine sh /workspace/run/devcontainer/workspace/make.sh",
    "postCreateCommand": "bash /init-container/init.sh",
    "customizations": {
        "vscode": {
            "settings": {
                "editor.tabSize": 4,
                "editor.insertSpaces": true,
                "files.trimTrailingWhitespace": true,
                "workbench.iconTheme": "material-icon-theme",
                "workbench.tree.indent": 20,
                "explorer.compactFolders": false,
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "bash"
                    }
                },
                "github.copilot.nextEditSuggestions.enabled": false
            },
            "extensions": [
                "PKief.material-icon-theme",
                "bierner.markdown-mermaid",
                "corschenzi.mermaid-graphical-editor",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-azuretools.vscode-docker",
                "streetsidesoftware.code-spell-checker",
                "saoudrizwan.claude-dev"
            ]
        }
    }
}
